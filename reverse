
#include<stdio.h>
int reverse(int n);
int main()
{
	int n,,temp,x;
	printf("Enter the number : ");
	scanf("%d",&n);
	x=reverse(n);
	if(x==temp)
		printf("\n%d is pallindrome\nThe Pallindrome of %d is : %d",temp,x);
	else
		printf("\n%d is not a pallindrome",temp);
	return 0;
}

int reverse(n)
{
	int m,rev,rem;
	m=n;
	rev=0;
	while(n!=0)
	{
		rem=n%10;                   //last digit of reversed number
		rev=rev*10+rem;             //remaining digits
		n/=10;
	}
	return rev;
}	
